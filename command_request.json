{
  "title" :  "CommandRequest",
  "description" :  "Command request",
  "type" :  "object",
  "properties" : {
    "cId" : {
      "description" : "Compoment id",
      "type" : "string"
    },
    "arg" : {
      "description" : "Command arguments",
      "type" : "array",
      "items" : {
        "allOf" : [
          {
            "type" : "object",
            "properties": {
              "cCI" : {
                "description" : "Command code id",
                "type" : "string",
                "pattern" : "^M[0-9]{4}$"
              }
            },
            "required" : [ "cCI", "n", "cO", "v" ]
          },
          {
            "$ref": "sxl_commands.json"
          }
        ]
      }
    }
  },
  "required" : ["cId", "arg"]
}