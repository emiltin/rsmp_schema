{
  "title" :  "Alarm",
  "description" :  "Alarm messsage",
  "properties" : {
    "mId" : { "$ref": "../3.1.1/definitions.json#/message_id" },
    "cId" : { "$ref": "../3.1.1/definitions.json#/component_id" },
    "aCId" : { "$ref": "../3.1.1/definitions.json#/alarm_code" },
    "xACId" : { "description" : "External alarm code id", "type" : "string" },
    "aSp" : {
      "description" : "Alarm specialization",
      "type" : "string",
      "enum" : [ "Issue", "Acknowledge", "Suspend", "Resume", "Request",
                 "issue", "acknowledge", "suspend", "resume", "request" ]
    }
  },
  "required" : [ "aSp"],
  "allOf" : [
    {
      "if": {
        "required" : [ "aSp" ],
        "properties" : { "aSp" : { "const" : "Issue" } }
      },
      "then": { "$ref": "../3.1.1/alarm_issue.json" }
    },
    {
      "if": {
        "allOf" : [
          {
            "required" : [ "aSp" ],
            "properties" : {
              "aSp" : { "enum" : [ "Suspend", "Resume",
                                   "suspend", "resume"] }
            }
          },
          {
            "not": { "required" : [ "sS" ] }
          }
        ]
      },
      "then": { "$ref": "../3.1.1/alarm_suspend_resume.json" }
    },
    {
      "if": {
        "required" : [ "aSp", "sS" ],
        "properties" : {
          "aSp" : { "enum" : [ "Suspend", "Resume",
                               "suspend", "resume"] },
          "sS" : { "enum" : [ "suspended", "notSuspended",
                              "Suspended", "NotSuspended" ] }
        }
      },
      "then": { "$ref": "../3.1.1/alarm_suspended_resumed.json" }
    }
  ]
}