        "then" : { "$ref" : "M0001.json" }
      },
      {
        "if": { "required" : ["cCI"], "properties" : { "cCI": { "const": "M0002" }}},
        "then" : { "$ref" : "M0002.json" }
      }
    ]
  }}}
}
